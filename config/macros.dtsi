macro_cmd_shift_r: macro_cmd_shift_r {
    compatible = "zmk,behavior-macro";
    label = "macro_cmd_shift_r";
    #binding-cells = <0>;
    bindings =
        <&macro_press &kp LCMD>, 
        <&macro_press &kp LEFT_SHIFT>, 
        <&macro_tap &kp R>, 
        <&macro_release &kp LEFT_SHIFT>, 
        <&macro_release &kp LCMD>
    ;
};

